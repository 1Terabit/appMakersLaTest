# Server configuration
PORT=3000
NODE_ENV=development

# Microservices URLs
AUTH_SERVICE_URL=http://localhost:3001
LOCATION_SERVICE_URL=http://localhost:3002
REALTIME_SERVICE_URL=http://localhost:3003

# BFF specific configuration
AGGREGATION_TIMEOUT=8000       # Timeout for aggregated endpoints (ms)
DASHBOARD_CACHE_TTL=30         # Dashboard data cache time (seconds)
ENABLE_REQUEST_LOGGING=true    # Log detailed request information

# Logging
LOG_LEVEL=info

# CORS configuration
CORS_ORIGINS=*

# HTTP client configuration
HTTP_TIMEOUT=5000
HTTP_MAX_REDIRECTS=5
